<PropertyList>
	
	<path>comm.ac</path>
	
	<animation>
		<type>material</type>
		<object-name>Labels</object-name>
		<emission>
			<red>1.0</red>
			<green>0.6</green>
			<blue>0.3</blue>
			<factor-prop>systems/lighting/pedestal-panel</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>Digits</object-name>
		<emission>
			<red>1.0</red>
			<green>1.0</green>
			<blue>1.0</blue>
			<factor-prop>systems/lighting/pedestal-digital</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>Digits</object-name>
		<condition>
			<and>
				<greater-than-equals>
					<property>systems/electrical/outputs/comm[1]</property>
					<value>24</value>
				</greater-than-equals>
				<greater-than>
					<property>systems/lighting/pedestal-digital</property>
					<value>0.01</value>
				</greater-than>
			</and>
		</condition>
	</animation>
	
	<!--  Active Freq Digits -->
	<animation>
		<type>textranslate</type>
		<object-name>ActDigit1</object-name>
		<property>instrumentation/comm[1]/frequencies/selected-mhz-fmt-x100</property>
		<factor>0.00001</factor>
		<step>10000</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>ActDigit2</object-name>
		<property>instrumentation/comm[1]/frequencies/selected-mhz-fmt-x100</property>
		<factor>0.0001</factor>
		<step>1000</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>ActDigit3</object-name>
		<property>instrumentation/comm[1]/frequencies/selected-mhz-fmt-x100</property>
		<factor>0.001</factor>
		<step>100</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>ActDigit4</object-name>
		<property>instrumentation/comm[1]/frequencies/selected-mhz-fmt-x100</property>
		<factor>0.01</factor>
		<step>10</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>ActDigit5</object-name>
		<property>instrumentation/comm[1]/frequencies/selected-mhz-fmt-x100</property>
		<factor>0.1</factor>
		<step>1</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	
	<!--  Standby Freq Digits -->
	<animation>
		<type>textranslate</type>
		<object-name>StbyDigit1</object-name>
		<property>instrumentation/comm[1]/frequencies/standby-mhz-fmt-x100</property>
		<factor>0.00001</factor>
		<step>10000</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>StbyDigit2</object-name>
		<property>instrumentation/comm[1]/frequencies/standby-mhz-fmt-x100</property>
		<factor>0.0001</factor>
		<step>1000</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>StbyDigit3</object-name>
		<property>instrumentation/comm[1]/frequencies/standby-mhz-fmt-x100</property>
		<factor>0.001</factor>
		<step>100</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>StbyDigit4</object-name>
		<property>instrumentation/comm[1]/frequencies/standby-mhz-fmt-x100</property>
		<factor>0.01</factor>
		<step>10</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>StbyDigit5</object-name>
		<property>instrumentation/comm[1]/frequencies/standby-mhz-fmt-x100</property>
		<factor>0.1</factor>
		<step>1</step>
		<bias>0.1</bias>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>

	<!-- Freq Knobs -->
	<animation>
		<type>knob</type>
		<object-name>Knob1</object-name>
		<property>instrumentation/comm[1]/major-rotate</property>
		<factor>-11.25</factor>
		<center>
			<x-m>0</x-m>
			<y-m>0.038</y-m>
			<z-m>-0.013</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<action>
			<binding>
				<condition>
					<greater-than-equals>
						<property>systems/electrical/outputs/comm[1]</property>
						<value>24</value>
					</greater-than-equals>
				</condition>
				<command>property-adjust</command>
				<property>instrumentation/comm[1]/frequencies/standby-mhz</property>
				<factor>1</factor>
				<min>118</min>
				<max>136</max>
				<wrap>true</wrap>
			</binding>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/comm[1]/major-rotate</property>
				<factor>1</factor>
				<min>0</min>
				<max>100000</max>
				<wrap>true</wrap>
			</binding>
		</action>
	</animation>
	
	<animation>
		<type>knob</type>
		<object-name>Knob2</object-name>
		<property>instrumentation/comm[1]/minor-rotate</property>
		<factor>-11.25</factor>
		<center>
			<x-m>0</x-m>
			<y-m>0.038</y-m>
			<z-m>-0.013</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<increase>
			<binding>
				<condition>
					<greater-than-equals>
						<property>systems/electrical/outputs/comm[1]</property>
						<value>24</value>
					</greater-than-equals>
				</condition>
				<command>nasal</command>
				<script>instruments.COMM.adjustDecimal(1, 1);</script>
			</binding>
		</increase>
		<decrease>
			<binding>
				<condition>
					<greater-than-equals>
						<property>systems/electrical/outputs/comm[1]</property>
						<value>24</value>
					</greater-than-equals>
				</condition>
				<command>nasal</command>
				<script>instruments.COMM.adjustDecimal(1, -1);</script>
			</binding>
		</decrease>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/comm[1]/minor-rotate</property>
				<factor>1</factor>
				<min>0</min>
				<max>100000</max>
				<wrap>true</wrap>
			</binding>
		</action>
	</animation>
	
	<!--  Freq Transfer Button -->
	<animation>
		<type>pick</type>
		<object-name>TFRbutton</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<condition>
					<greater-than-equals>
						<property>systems/electrical/outputs/comm[1]</property>
						<value>24</value>
					</greater-than-equals>
				</condition>
				<command>property-swap</command>
				<property>instrumentation/comm[1]/frequencies/selected-mhz</property>
				<property>instrumentation/comm[1]/frequencies/standby-mhz</property>
			</binding>
		</action>
	</animation>

</PropertyList>
