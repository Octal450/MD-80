<PropertyList>
	
	<path>fuel.ac</path>
	
	<animation>
		<type>material</type>
		<object-name>Digits</object-name>
		<emission>
			<red>1.0</red>
			<green>1.0</green>
			<blue>1.0</blue>
			<factor-prop>controls/lighting/main-digital-norm</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>Digits</object-name>
		<condition>
			<and>
				<greater-than-equals>
					<property>systems/electrical/outputs/efis</property>
					<value>25</value>
				</greater-than-equals>
				<greater-than>
					<property>controls/lighting/main-digital-norm</property>
					<value>0.01</value>
				</greater-than>
			</and>
		</condition>
	</animation>

