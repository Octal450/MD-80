<PropertyList>
	
	<path>agl.ac</path>
	
	<animation>
		<type>material</type>
		<object-name>LightingGroup</object-name>
		<emission>
			<red>0.6</red>
			<green>0.45</green>
			<blue>0.3</blue>
			<factor-prop>controls/lighting/main-panel-norm</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>DHLight</object-name>
		<emission>
			<red>1.0</red>
			<green>0.776</green>
			<blue>0.273</blue>
			<factor-prop>controls/misc/minimums-light</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>Tape</object-name>
		<property>position/gear-agl-ft</property>
		<interpolation>
			<entry><ind>   0</ind><dep>0.0000</dep></entry>
			<entry><ind>3000</ind><dep>0.9812</dep></entry>
		</interpolation>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>DH100</object-name>
		<property>controls/switches/minimums</property>
		<factor>0.001</factor>
		<step>100</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>DH10</object-name>
		<property>controls/switches/minimums</property>
		<factor>0.01</factor>
		<step>10</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>DH1</object-name>
		<property>controls/switches/minimums</property>
		<factor>0.1</factor>
		<step>1</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>Knob</object-name>
		<property>instrumentation/efis/mins-rotate</property>
		<factor>11.25</factor>
		<center>
			<x-m>0</x-m>
			<y-m>0.01014</y-m>
			<z-m>-0.03468</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>Knob</object-name>
		<action>
			<button>0</button>
			<button>3</button>
			<repeatable>false</repeatable>
			<binding>
				<condition>
					<not><property>devices/status/keyboard/shift</property></not>
				</condition>
				<command>property-adjust</command>
				<property>controls/switches/minimums</property>
				<step>1</step>
				<max>999</max>
			</binding>
			<binding>
				<condition>
					<property>devices/status/keyboard/shift</property>
				</condition>
				<command>property-adjust</command>
				<property>controls/switches/minimums</property>
				<step>10</step>
				<max>999</max>
			</binding>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/efis/mins-rotate</property>
				<step>1</step>
				<min>0</min>
				<max>100000</max>
				<wrap>true</wrap>
			</binding>
		</action>
		<action>
			<button>1</button>
			<button>4</button>
			<repeatable>true</repeatable>
			<binding>
				<condition>
					<not><property>devices/status/keyboard/shift</property></not>
				</condition>
				<command>property-adjust</command>
				<property>controls/switches/minimums</property>
				<step>-1</step>
				<min>0</min>
			</binding>
			<binding>
				<condition>
					<property>devices/status/keyboard/shift</property>
				</condition>
				<command>property-adjust</command>
				<property>controls/switches/minimums</property>
				<step>-10</step>
				<min>0</min>
			</binding>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/efis/mins-rotate</property>
				<step>-1</step>
				<min>0</min>
				<max>100000</max>
				<wrap>true</wrap>
			</binding>
		</action>
	</animation>

</PropertyList>
