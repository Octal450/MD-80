<PropertyList>
	
	<path>egt.ac</path>
	
	<animation>
		<type>material</type>
		<object-name>Face</object-name>
		<object-name>Needle</object-name>
		<emission>
			<red>1.0</red>
			<green>0.4</green>
			<blue>0.1</blue>
			<factor-prop>controls/lighting/main-integ-norm</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>Needle</object-name>
		<property>engines/engine[1]/egt-actual</property>
		<interpolation>
			<entry><ind>  0</ind><dep>-45.0</dep></entry>
			<entry><ind>300</ind><dep>  0.0</dep></entry>
			<entry><ind>350</ind><dep>  7.5</dep></entry>
			<entry><ind>400</ind><dep> 22.5</dep></entry>
			<entry><ind>800</ind><dep>202.5</dep></entry>
		</interpolation>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

</PropertyList>
