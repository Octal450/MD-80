<PropertyList>
	
	<path>altimeter.ac</path>
	
	<animation>
		<type>material</type>
		<object-name>LightingGroup</object-name>
		<emission>
			<red>1.0</red>
			<green>0.6</green>
			<blue>0.3</blue>
			<factor-prop>systems/lighting/capt-panel</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>AltNeedle</object-name>
		<property>instrumentation/altimeter[0]/altitude-ft</property>
		<factor>0.36</factor>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>Bug</object-name>
		<property>instrumentation/altimeter[0]/bug-linear</property>
		<factor>0.36</factor>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>Neg</object-name>
		<condition>
			<less-than>
				<property>instrumentation/altimeter[0]/altitude-ft</property>
				<value>-0.5</value>
			</less-than>
		</condition>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>alt1</object-name>
		<property>instrumentation/altimeter[0]/altitude-ft</property>
		<factor>0.00001</factor>
		<step>10000</step>
		<scroll>20</scroll>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>alt2</object-name>
		<property>instrumentation/altimeter[0]/altitude-ft</property>
		<factor>0.0001</factor>
		<step>1000</step>
		<scroll>20</scroll>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>alt3</object-name>
		<property>instrumentation/altimeter[0]/altitude-ft</property>
		<factor>0.001</factor>
		<step>100</step>
		<scroll>20</scroll>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>alt4</object-name>
		<property>instrumentation/altimeter[0]/altitude-ft</property>
		<factor>0.01</factor>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>inhg01</object-name>
		<property>instrumentation/altimeter[0]/setting-inhg-text</property>
		<factor>0.0001</factor>
		<step>1000</step>
		<scroll>1</scroll>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>inhg02</object-name>
		<property>instrumentation/altimeter[0]/setting-inhg-text</property>
		<factor>0.001</factor>
		<step>100</step>
		<scroll>1</scroll>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>inhg03</object-name>
		<property>instrumentation/altimeter[0]/setting-inhg-text</property>
		<factor>0.01</factor>
		<step>10</step>
		<scroll>1</scroll>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>inhg04</object-name>
		<property>instrumentation/altimeter[0]/setting-inhg-text</property>
		<factor>0.1</factor>
		<step>1</step>
		<scroll>1</scroll>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>mb01</object-name>
		<property>instrumentation/altimeter[0]/setting-hpa-text</property>
		<factor>0.0001</factor>
		<step>1000</step>
		<scroll>1</scroll>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>textranslate</type>
		<object-name>mb02</object-name>
		<property>instrumentation/altimeter[0]/setting-hpa-text</property>
		<factor>0.001</factor>
		<step>100</step>
		<scroll>1</scroll>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>textranslate</type>
		<object-name>mb03</object-name>
		<property>instrumentation/altimeter[0]/setting-hpa-text</property>
		<factor>0.01</factor>
		<step>10</step>
		<scroll>1</scroll>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>textranslate</type>
		<object-name>mb04</object-name>
		<property>instrumentation/altimeter[0]/setting-hpa-text</property>
		<factor>0.1</factor>
		<step>1</step>
		<scroll>1</scroll>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>Flag</object-name>
		<condition>
			<not-equals>
				<property>instrumentation/altimeter[0]/power-avail</property>
				<value>1</value>
			</not-equals>
		</condition>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>Alert</object-name>
		<emission>
			<red>1.0</red>
			<green>1.0</green>
			<blue>0</blue>
			<factor-prop>instrumentation/altimeter[0]/alert-light</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>knob</type>
		<object-name>BaroKnob</object-name>
		<property>controls/cockpit/baro-rotate[0]</property>
		<factor>11.25</factor>
		<center>
			<x-m>0</x-m>
			<y-m>-0.03169</y-m>
			<z-m>-0.03154</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/altimeter/setting-inhg</property>
				<factor>0.01</factor>
				<min>26</min>
				<max>33</max>
				<wrap>false</wrap>
			</binding>
			<binding>
				<command>property-adjust</command>
				<property>controls/cockpit/baro-rotate[0]</property>
				<factor>1</factor>
				<min>0</min>
				<max>100000</max>
				<wrap>true</wrap>
			</binding>
		</action>
	</animation>
	
	<animation>
		<type>knob</type>
		<object-name>BugKnob</object-name>
		<property>controls/cockpit/bug-rotate[0]</property>
		<factor>11.25</factor>
		<center>
			<x-m>0</x-m>
			<y-m>0.03169</y-m>
			<z-m>-0.03154</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/altimeter[0]/bug-input</property>
				<factor>10</factor>
				<min>0</min>
				<max>1000</max>
				<wrap>true</wrap>
			</binding>
			<binding>
				<command>property-adjust</command>
				<property>controls/cockpit/bug-rotate[0]</property>
				<factor>1</factor>
				<min>0</min>
				<max>100000</max>
				<wrap>true</wrap>
			</binding>
		</action>
	</animation>

</PropertyList>
