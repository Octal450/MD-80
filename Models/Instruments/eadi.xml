<?xml version="1.0"?>
<PropertyList>

<path>eadi.ac</path>

	<!-- Power on/off -->
	<animation>
		<name>Power on/off</name>
		<type>select</type>
		<object-name>Off</object-name>
		<condition>
			<greater-than>
				<property>systems/electrical/bus/unused</property>
				<value>99999</value>
			</greater-than>
		</condition>
	</animation>
	
