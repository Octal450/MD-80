<?xml version="1.0"?>

<PropertyList>
	
	<path>firetankctrl2.ac</path>
	
	<animation>
		<type>rotate</type>
		<object-name>brightswitch</object-name>
		<property>controls/cockpit/filetanker/bright</property>
		<factor>45</factor>
		<center>
			<x-m>0.00268</x-m>
			<y-m>-0.013919</y-m>
			<z-m>0.021367</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>brightswitch</object-name>
		<object-name>fastenerring.002</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>controls/firetank/bright/switch</property>
			</binding>
			<binding>
				<command>nasal</command>
				<script>core.Sound.switch1();</script>
			</binding>
		</action>
	</animation>
	
	<animation>
        <type>translate</type>
        <object-name>lamptestbutton</object-name>
        <property>controls/firetank/test/button</property>
        <repeatable>false</repeatable>
        <factor>0.001</factor>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>
	
	<animation>
        <type>pick</type>
        <object-name>lamptestbutton</object-name>
        <action>
			<button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>
                    setprop("controls/firetank/test/button", 1);
                    core.Sound.btn1();
                </script>
            </binding>
			<mod-up>
				<binding>
					<command>nasal</command>
					<script>
						setprop("controls/firetank/test/button", 0);
					</script>
				</binding>
			</mod-up>
        </action>
    </animation>
	
	<!-- Drop Power Logic -->
	<animation>
		<type>knob</type>
		<object-name>droppowercover</object-name>
		<property>controls/cockpit/filetanker/droppower-cover</property>
		<drag-direction>vertical</drag-direction>
		<drag-scale-px>15</drag-scale-px>
		<factor>60</factor>
		<center>
			<x-m>0.002847</x-m>
			<y-m>-0.052246</y-m>
			<z-m>-0.01583</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
		<increase>
			<binding>
				<command>property-assign</command>
				<property>controls/firetank/droppower/cover</property>
				<value>1</value>
			</binding>
		</increase>
		<decrease>
			<binding>
				<condition>
					<property>controls/firetank/droppower/switch</property>
				</condition>
				<command>nasal</command>
				<script>core.Sound.switch1();</script>
			</binding>
			<binding>
				<command>property-assign</command>
				<property>controls/firetank/droppower/switch</property>
				<value>0</value>
			</binding>
			<binding>
				<command>property-assign</command>
				<property>controls/firetank/droppower/cover</property>
				<value>0</value>
			</binding>
		</decrease>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>droppowerswitch</object-name>
		<property>controls/cockpit/filetanker/droppower</property>
		<factor>45</factor>
		<center>
			<x-m>0.00263</x-m>
			<y-m>-0.052838</y-m>
			<z-m>-0.031149</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>droppowerswitch</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<condition>
					<property>controls/firetank/droppower/cover</property>
				</condition>
				<command>property-toggle</command>
				<property>controls/firetank/droppower/switch</property>
			</binding>
			<binding>
				<condition>
					<property>controls/firetank/droppower/cover</property>
				</condition>
				<command>nasal</command>
				<script>core.Sound.switch1();</script>
			</binding>
		</action>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>dropPowerOn</object-name>
		<condition>
			<or>
				<property>systems/firetank/droppower</property>
				<property>systems/firetank/lamptest</property>
			</or>
		</condition>
	</animation>
	<animation>
		<object-name>dropPowerOn</object-name>
		<type>material</type>
		<condition>
			<or>
				<property>systems/firetank/droppower</property>
				<property>systems/firetank/lamptest</property>
			</or>
		</condition>
		<emission>
			<factor-prop>systems/firetank/bright</factor-prop>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
		</emission>
	</animation>
	<model>
		<name>droppoweron-procedural</name>
		<path>Aircraft/MD-80/Models/Effects/Firetank/procedural_light_indicator_blue.xml</path>
		<offsets>
			<x-m>0.007728</x-m>
			<y-m>-0.052611</y-m>
			<z-m>-0.005187</z-m>
		</offsets>
		<condition>
			<or>
				<property>systems/firetank/droppower</property>
				<property>systems/firetank/lamptest</property>
			</or>
		</condition>
	</model>
	
	<!-- Drop Arm Logic -->
	<animation>
		<type>knob</type>
		<object-name>droparmcover</object-name>
		<property>controls/cockpit/filetanker/droparm-cover</property>
		<drag-direction>vertical</drag-direction>
		<drag-scale-px>15</drag-scale-px>
		<factor>60</factor>
		<center>
			<x-m>0.002847</x-m>
			<y-m>-0.02615</y-m>
			<z-m>-0.01583</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
		<increase>
			<binding>
				<command>property-assign</command>
				<property>controls/firetank/droparm/cover</property>
				<value>1</value>
			</binding>
		</increase>
		<decrease>
			<binding>
				<condition>
					<property>controls/firetank/droparm/switch</property>
				</condition>
				<command>nasal</command>
				<script>core.Sound.switch1();</script>
			</binding>
			<binding>
				<command>property-assign</command>
				<property>controls/firetank/droparm/switch</property>
				<value>0</value>
			</binding>
			<binding>
				<command>property-assign</command>
				<property>controls/firetank/droparm/cover</property>
				<value>0</value>
			</binding>
		</decrease>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>droparmswitch</object-name>
		<property>controls/cockpit/filetanker/droparm</property>
		<factor>45</factor>
		<center>
			<x-m>0.002407</x-m>
			<y-m>-0.025863</y-m>
			<z-m>-0.03066</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>droparmswitch</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<condition>
					<property>controls/firetank/droparm/cover</property>
				</condition>
				<command>property-toggle</command>
				<property>controls/firetank/droparm/switch</property>
			</binding>
			<binding>
				<condition>
					<property>controls/firetank/droparm/cover</property>
				</condition>
				<command>nasal</command>
				<script>core.Sound.switch1();</script>
			</binding>
		</action>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>dropArmOn</object-name>
		<condition>
			<or>
				<property>/systems/firetank/ready</property>
				<property>systems/firetank/lamptest</property>
			</or>
		</condition>
	</animation>
	<animation>
		<object-name>dropArmOn</object-name>
		<type>material</type>
		<condition>
			<or>
				<property>/systems/firetank/ready</property>
				<property>systems/firetank/lamptest</property>
			</or>
		</condition>
		<emission>
			<factor-prop>systems/firetank/bright</factor-prop>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
		</emission>
	</animation>
	<model>
		<name>droparmron-procedural</name>
		<path>Aircraft/MD-80/Models/Effects/Firetank/procedural_light_indicator_red.xml</path>
		<offsets>
			<x-m>0.007602</x-m>
			<y-m>-0.026892</y-m>
			<z-m>-0.005653</z-m>
		</offsets>
		<condition>
			<or>
				<property>/systems/firetank/ready</property>
				<property>systems/firetank/lamptest</property>
			</or>
		</condition>
	</model>
	
	<!-- Distribution Knob -->
	<animation>
		<type>knob</type>
		<object-name>distributiondial</object-name>
		<property>controls/cockpit/filetanker/distribution-dial</property>
		<interpolation>
			<entry><ind> 0</ind><dep> -13</dep></entry>
			<entry><ind>21</ind><dep>-341</dep></entry>
		</interpolation>
		<center>
			<x-m>0.006293</x-m>
			<y-m>0.04192</y-m>
			<z-m>-0.003</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>controls/firetank/distribution/dial</property>
				<factor>1</factor>
				<min>0</min>
				<max>21</max>
				<wrap>false</wrap>
			</binding>
			<binding>
				<command>nasal</command>
				<script>core.Sound.knb1();</script>
			</binding>
		</action>
	</animation>

</PropertyList>
